{
  "name": "peripheral",
  "version": "1.0.0",
  "description": "Take in content. Peripherally.",
  "main": "background.js",
  "scripts": {
    "build:background": "browserify src/background.js -o src/build/background.bundle.js --debug",
    "build:content": "browserify src/content.js -o src/build/content.bundle.js --debug",
    "build": "npm run build:background && npm run build:content",
    "dev": "npm-watch build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "austin ce <austince@github.com>",
  "license": "ISC",
  "private": false,
  "dependencies": {
    "chrome-promise": "^2.1.2",
    "jquery": "^3.3.1",
    "lodash": "^4.17.4",
    "p5": "^0.6.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.58",
    "@types/lodash": "^4.14.98",
    "browserify": "^15.2.0",
    "npm-watch": "^0.3.0"
  },
  "watch": {
    "build": {
      "patterns": [
        "src/*.js"
      ],
      "ignore": [
        "src/build/**"
      ],
      "delay": 500
    }
  }
}
